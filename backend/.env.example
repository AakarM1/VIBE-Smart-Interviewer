# Development Environment Configuration
DATABASE_URL=sqlite:///./trajectorie.db
SECRET_KEY=your-secret-key-change-in-production-use-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database configuration
SQL_ECHO=false
TESTING=false

# Environment
ENVIRONMENT=development

# CORS settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# File storage configuration
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Background tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI/ML services (if needed)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# S3 configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=trajectorie-uploads
AWS_S3_REGION=us-east-1